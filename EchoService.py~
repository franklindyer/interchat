from ChatBot import *

class EchoService:

    def __init__(self, cbot):
        self.cbot = cbot
        cbot.set_service(self)

    async def handle_msg(self, username, message):
        await self.cbot.send_msg(username, f"You are {username} and said {message}")

    def connect(self):
        self.cbot.connect()
